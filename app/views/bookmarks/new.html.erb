<div class="text-center my-5">
  <h3>Bookmark <%= @list.name %> list</h3>
</div>

<div class="row justify-content-center">
  <div class="col-8 mb-3">
    <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.input :comment, placeholder: 'Comment about the movie' %>
      <%= f.association :movie, collection: Movie.all, prompt: 'Select a movie' %>
      <div class="d-flex justify-content-between align-items-center">
        <%= f.submit class: 'btn btn-warning' %>
        <%= link_to '<i class="fas fa-undo-alt"></i><span>See the list</span>'.html_safe, list_path(@list) %>
      </div>
    <% end %>
  </div>
</div>

