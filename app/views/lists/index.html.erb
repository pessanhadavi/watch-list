<div class="container my-3">
  <div class="text-center">
    <h1>Why don't we make a new movie List?</h1>
  </div>

  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3>Available lists</h3>
    <%= link_to 'Create a movie list', new_list_path, class: 'btn btn-warning' %>
  </div>

  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-4">
        <%= link_to list_path(list) do %>
            <%= list.name %>
        <% end %>
      </div>
    <% end %>
  </div>

</div>