<div class="container my-3">
  <div class="row d-flex justify-content-center">
  <div class="col-8">
  <div class="text-center mb-5">
    <h1>Why don't we make a new movie List?</h1>
  </div>

  <div class="d-flex align-items-center justify-content-between mb-4">
    <h3>Available lists</h3>
    <%= link_to 'Add a new list', new_list_path, class: 'btn btn-warning' %>
  </div>

  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-4  mb-3 text-center main-card">
        <%= link_to list_path(list), class: "list-link" do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path(list.photo.key) if list.photo.attached? %>)">
            <%= list.name %>
          </div>
        <% end %>
        <div class="d-flex justify-content-end">
          <small class ="p-1">
            <%= link_to '<i class="fa fa-trash"></i>'.html_safe, list_path(list), method: :delete, data: { confirm: "Are you sure?" }, class: "delete-list-link", data_toggle: "tooltip", data_placement: "top", title: "Delete" %>
          </small>
        </div>
      </div>
    <% end %>
  </div>
  </div>
</div>
</div>